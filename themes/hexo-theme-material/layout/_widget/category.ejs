<% if (site.categories.length){ %>
	<div class="widget">
		<h4><%= __('categories') %></h4>
		<ul class="tag_box inline list-unstyled">
		<% site.categories.sort('name').each(function(item){ %>
			<li>
            <a href="<%- config.root %><%- item.path %>"><%= item.name %> <span class="badge"><%= item.posts.length %></span></a>
            </li>
		<% }); %>
		</ul>
	</div>
<% } %>
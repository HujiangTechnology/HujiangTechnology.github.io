<% if (site.tags.length){ %>
	<div class="widget">
		<h4><%= __('tagcloud') %></h4>
		<ul class="tag_box inline list-unstyled">		
		<% site.tags.random().limit(20).each(function(item){ %>
			<!--<li><a href="<%- config.root %><%- item.path %>"><%= item.name %><span><%= item.posts.length %></span></a></li>-->
            <li><a href="<%- config.root %><%- item.path %>"><%= item.name %> <span class="badge"><%= item.posts.length %></span></a></li>
		<% }); %>
		<% if (site.tags.length > 20) { %>
		   <li><a href="<%- config.root %>/tags">...<span class="badge"><%= site.tags.length %></span></a></li>
		<% } %> 
		</ul>
	</div>
<% } %>
